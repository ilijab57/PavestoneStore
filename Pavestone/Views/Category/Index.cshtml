@model IEnumerable<Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="container" p-3>
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary text-right">
                <i class="fas fa-plus"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>
</div>

<br /><br />

@if(Model.Count() > 0)
            {
                <table class="table table-bordered table-striped">
                    <thead>
                        <th>Category Name</th>
                        <th>Display Order</th>
                        <th>Display Order</th>
                    </thead>
                    <tbody>
                        @foreach(var category in Model)
                {
                    <tr>
                        <td width="50%">@category.Name</td>
                        <td width="30%">@category.DisplayOrder</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-action="Edit" asp-route-Id="@category.Id" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-Id="@category.Id" class="btn btn-danger mx-2">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
                    </tbody>
                </table>
            } else
            {
                <p>There are no categories to display.</p>
            }
