@model IEnumerable<ApplicationType>
@{
    ViewData["Title"] = "Application Types";
}

<div class="container" p-3>
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Application Types</h2>
        </div>
        <div class="col-6">
            <a asp-action="Create" class="btn btn-primary text-right">
                <i class="fas fa-plus"></i> &nbsp; Create New Application Type
            </a>
        </div>
    </div>
</div>

<br />
<br />

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <thead>
        <th>Application Type Name</th>
        <th>Actions</th>
        </thead>
        <tbody>
            @foreach (var type in Model)
            {
            <tr>
                <td width="50%">@type.Name</td>
                <td class="text-center">
                    <div class="w-75 btn-group" role="group">
                        <a asp-action="Edit" asp-route-Id="@type.Id" class="btn btn-primary mx-2">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-action="Delete" asp-route-Id="@type.Id" class="btn btn-danger mx-2">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>There are no application types to display.</p>
}


